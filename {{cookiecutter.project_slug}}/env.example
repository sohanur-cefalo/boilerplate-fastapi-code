# Database Configuration
{% if cookiecutter.development_environment == "full_docker" -%}
DATABASE_URL=postgresql://{{cookiecutter.database_user}}:{{cookiecutter.database_password}}@db:5432/{{cookiecutter.database_name}}
{% elif cookiecutter.development_environment == "docker_db_local_app" -%}
DATABASE_URL=postgresql://{{cookiecutter.database_user}}:{{cookiecutter.database_password}}@localhost:{{cookiecutter.database_port}}/{{cookiecutter.database_name}}
{% else -%}
DATABASE_URL=sqlite:///./app.db
{% endif -%}

# Application Configuration
DEBUG={% if cookiecutter.development_environment != "full_docker" %}True{% else %}False{% endif %}
PROJECT_NAME={{cookiecutter.project_name}}
VERSION={{cookiecutter.version}}

{% if cookiecutter.include_authentication != "none" -%}
# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
{% endif -%}

{% if cookiecutter.include_rate_limiting == "yes" -%}
# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
{% endif -%}

# API Configuration
API_V1_STR=/api/v1

